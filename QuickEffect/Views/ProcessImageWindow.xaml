<Window x:Class="QuickEffect.Views.ProcessImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:QuickEffect.Views.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ProcessImageWindow" Height="450" Width="800">
    
    <!-- Container -->
    <DockPanel Margin="10">
        
        <!-- Navigation -->
        <StackPanel DockPanel.Dock="Bottom">
            <Button x:Name="CloseProcessingWindowButton" 
                    HorizontalAlignment="Right"
                    Click="CloseProcessingWindowButton_Click"
                    ToolTip="Clear selected files">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Close"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!-- Image Processing View -->
        <uc:ImageProcessorUserControl DataContext="{Binding}"/>
    </DockPanel>
</Window>
