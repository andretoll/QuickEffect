<Canvas x:Class="QuickEffect.Views.UserControls.ImageToolbarUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" 
        d:DesignHeight="800" d:DesignWidth="1280">

    <!-- Toolbar Border -->
    <Border x:Name="ToolbarContainer" 
            Visibility="{Binding SelectedImage, Converter={StaticResource nullToVisibilityConverter}}"
            BorderThickness="1"
            Background="Black"
            Cursor="Hand"
            ToolTip="Move"            
            MouseDown="ToolbarContainer_MouseDown"
            MouseUp="ToolbarContainer_MouseUp"
            MouseMove="ToolbarContainer_MouseMove"
            Canvas.Top="10"
            Canvas.Left="380">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="8"
                              Opacity=".7"/>
        </Border.Effect>

        <!-- Toolbar Container -->
        <Grid Width="auto"
              Height="60">
            <!-- Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <!-- Original -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="0"
                         ToolTip="Original"
                         IsChecked="{Binding Original}"/>
            <!-- Grayscale -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="1"
                         ToolTip="Grayscale"
                         IsChecked="{Binding Grayscale}"/>
            <!-- Sepia -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="2"
                         ToolTip="Sepia"
                         IsChecked="{Binding Sepia}"/>
            <!-- Red filter -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="3"
                         ToolTip="Red filter"
                         IsChecked="{Binding RedFilter}"/>
            <!-- Green filter -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="4"
                         ToolTip="Green filter"
                         IsChecked="{Binding GreenFilter}"/>
            <!-- Blue filter -->
            <RadioButton Content="pack://application:,,,/QuickEffect;component/Resources/images/grayscale.jpg" 
                         Style="{StaticResource ImageRadioButton}"
                         Grid.Column="5"
                         ToolTip="Blue filter"
                         IsChecked="{Binding BlueFilter}"/>

            <!-- Move handle -->
            <DockPanel DockPanel.Dock="Right"
                       Grid.Column="6"
                       HorizontalAlignment="Center">
                <iconPacks:PackIconMaterial x:Name="MoveHandleToggleIcon"
                                            Kind="ArrowAll"
                                            Width="25"
                                            Height="25"                                            
                                            Foreground="White"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
            </DockPanel>

        </Grid>

    </Border>

</Canvas>
